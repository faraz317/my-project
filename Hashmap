import java.io.File;
import java.io.IOException;
import java.util.Scanner;
public class Hashmap{
    public static void main(String[] args) {
        String filePath = "C:\\Users\\Lab User\\Desktop\\sales.txt";
        Scanner newer = new Scanner(System.in);
        System.out.println("write Product Code:");
        String prod = newer.nextLine();  
        int total = 0;

    try {
        File myFile = new File(filePath);

        
            Scanner s1 = new Scanner(myFile);
            String line = s1.nextLine();
            while(s1.hasNextLine()){
                line =s1.nextLine();
               String [] fields =line.split("\t");
                if (fields.length >= 6) {
                if (fields[3].equals(prod)) {
                        int qty = Integer.parseInt(fields[4]);
                        int unitPrice = Integer.parseInt(fields[5]);
                        total += qty * unitPrice;
                    }
                    
                   // int qty =Integer.parseInt(fields[4]);
                    //int unitPrice =Integer.parseInt(fields[5]);
                    //total += qty * unitPrice;
                    
                }
        
            }     
            System.out.println("TOTAL "+ total +" OF PRODUCT "+prod);  
        }
        catch(IOException e){
            System.out.println("NOT FOUND");
        }
    }
}